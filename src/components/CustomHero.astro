---
import { Image } from "astro:assets";

const { topText, description, heading, imgSrc, background } = Astro.props;
---

<style define:vars={{ customBackground: background }}>
  .outer-container {
    background: var(
      --customBackground,
      linear-gradient(
        34deg,
        rgb(184, 159, 227) 0%,
        rgb(207, 210, 251) 21%,
        rgb(251, 233, 230) 94%,
        rgb(255, 255, 255) 100%
      )
    );
    display: flex;
    justify-content: center;
    align-items: center;
    height: fit-content;
    padding: 2rem 0;
  }
  .container {
    display: flex;
    max-width: 1330px;
    width: 100%;
    padding: 1rem;
    align-items: center;
  }
  .left-content {
    flex: 1;
  }
  .right-content {
    flex: 1;
  }
  .top-text {
    font-weight: 700;
    margin-bottom: 16px;
    text-transform: uppercase;
    font-size: 14px;
    line-height: 15px;
  }
  .title {
    font-size: 34px;
    line-height: 40px;
    color: #333;
    margin-bottom: 16px;
    font-weight: 600;
  }
  .text-section {
    max-width: 500px;
  }
  p {
    color: #0d0d0d;
    margin-bottom: 20px;
    font-size: 18px;
    line-height: 28px;
  }
  .watch-button {
    color: #333;
    padding: 10px 20px;
    border: 2px solid #333;
    border-radius: 25px;
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    &:hover {
      background-color: #0d0d0d;
      color: white;
    }
  }

  .image-section {
    width: 100%;
    max-width: 500px; /* or whatever maximum width you prefer */
    margin: 0 auto;
  }

  .responsive-image {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  @media (max-width: 768px) {
    .container {
      flex-direction: column-reverse;
      width: 100%;
    }
    .image-section {
      max-width: 100%;
    }
    .outer-container {
      padding: 2rem 0;
    }
  }
</style>

<div class="outer-container">
  <div class="container">
    <div class="left-content">
      <div class="text-section">
        <h1 class="top-text">{topText}</h1>
        <h1 class="title">{heading}</h1>
        <p>
          {description}
        </p>
        <div class="watch-button">Learn More</div>
      </div>
    </div>
    <div class="right-content">
      <div class="image-section">
        <Image
          src={imgSrc}
          alt="Descriptive alt text"
          class="responsive-image"
          width={500}
          height={500}
        />
      </div>
    </div>
  </div>
</div>
