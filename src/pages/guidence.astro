---
import Layout from "@/layouts/Layout.astro";
---

<style>
  .container {
    max-width: 1300px;
    margin: 0 auto;
    padding: 1rem;
  }
  .hero {
    background:
      linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)),
      url("../assets/guidenece.jpg") no-repeat center center/cover;
    color: #ffffff;
    padding: 120px 20px;
    text-align: center;
    border-radius: 20px;
    margin-top: 3.5rem;
  }

  .content {
    padding: 20px;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }
  .degree {
    background: #ffffff;
    margin: 10px;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    width: calc(33.33% - 40px);
    box-sizing: border-box;
    transition: transform 0.3s ease;
  }
  .degree:hover {
    transform: translateY(-5px);
  }
  .degree i {
    font-size: 32px;
    margin-bottom: 15px;
    color: #2a2763;
  }
  .degree h3 {
    color: #2a2763;
  }
  .degree p {
    font-size: 14px;
    color: #555;
  }
  @media screen and (max-width: 900px) {
    .degree {
      width: calc(50% - 40px);
    }
  }
  @media screen and (max-width: 600px) {
    .degree {
      width: 100%;
    }
  }
</style>
<Layout title="Guidance">
  <div class="container">
    <div class="hero" id="home">
      <h1>Welcome to Guidance</h1>
      <p>Your pathway to academic and career success</p>
    </div>
    <div class="content" id="degrees">
      <div class="degree">
        <i class="fas fa-book"></i>
        <h3>BA English Literature</h3>
        <p>
          Explore the rich world of English literature, from Shakespeare to
          modern classics.
        </p>
      </div>
      <div class="degree">
        <i class="fas fa-book"></i>
        <h3>BA Tamil Literature</h3>
        <p>
          Dive into the ancient and vibrant Tamil literary tradition,
          encompassing poetry, drama, and more.
        </p>
      </div>
      <div class="degree">
        <i class="fas fa-book"></i>
        <h3>MA English Literature</h3>
        <p>
          Advance your studies with a master's degree focusing on critical
          theory and advanced literary analysis.
        </p>
      </div>
      <div class="degree">
        <i class="fas fa-graduation-cap"></i>
        <h3>Bachelor of Education (B.Ed) in Tamil</h3>
        <p>
          Prepare to teach Tamil language and literature with a focus on
          pedagogical methods.
        </p>
      </div>
      <div class="degree">
        <i class="fas fa-graduation-cap"></i>
        <h3>Bachelor of Education (B.Ed) in English</h3>
        <p>
          Gain the skills to teach English effectively, with a focus on
          curriculum development and teaching strategies.
        </p>
      </div>
      <div class="degree">
        <i class="fas fa-briefcase"></i>
        <h3>Bachelor of Business Administration (BBA)</h3>
        <p>
          Develop essential business skills and knowledge to excel in management
          roles across various industries.
        </p>
      </div>
      <div class="degree">
        <i class="fas fa-briefcase"></i>
        <h3>Master of Business Administration (MBA)</h3>
        <p>
          Elevate your business acumen with advanced management education,
          preparing you for leadership positions.
        </p>
      </div>
    </div>
  </div>
</Layout>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"
></script>
